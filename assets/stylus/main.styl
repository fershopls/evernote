*
	font-family "Montserrat", sans-serif
	transition all 0.4s ease
html, body
	height 100%

._title, ._title:focus, ._title:hover
	border 1px solid transparent
	border-radius 0px
	text-align center
	height 80px

._editor
	width 100%
	height 100%
	&:focus, &:hover
		border 1px solid transparent
		border-radius 0px
		border-left 1px solid #F1F1F1
.status
	color #D7D7D7
	font-size 11px
	text-transform uppercase
	font-weight bold
.removeInputStyle
	outline none
	box-shadow none
	border-color transparent
textarea
	font-family "Montserrat", sans-serif
	border 1px solid #f1f1f1
	color #383838

.checkbox
	display inline-block
	width 12px
	height @width
	font-size @width
	border 2px solid #333
	border-radius 3px
	line-height @height
	color: #fff;
	background: #fff;
	box-shadow: inset 0 0 0 0 #31302b;
	transition-duration: 0.4s;
	&:hover
		cursor pointer
	&.active
		transition-duration: 0.7s;
		box-shadow: inset 0 100px 0 0 #31302b;
	.fa
		color #fff
.button-sm
	line-height 28px
	height 28px
	font-size 11px
.button-circle
	border-radius 50%
	width 24px
	height 24px
	line-height 12px
	padding 0
	position relative
	.fa
		position absolute
		right: 0; left: 0;
		top: 25%; bottom: 0;
.button-fa
	position relative
	padding-left 50px
	.fa
		position absolute
		left 0
		border-right 1px solid #ccc
		top 0
		bottom 0
		padding 12px
		font-size 14px

$color-text-muted = #aaa

.document-app
	&, &>.row
		height 100%
	.document-editor
		height 80%
		margin-top 77px
	.document-menu
		padding 20px 0
		border-bottom 1px solid #F1F1F1
		.container
			position relative
		.document-menu-button
			position absolute
			right 20px
			padding 0 20px 0 40px
			.fa
				font-size 11px
				padding 9px 10px
	.document-navbar
		&.document-navbar-collapsed
				width 0px
				overflow hidden
				position absolute!important
		hr
			margin 35px 0 10px
		.document-menu-title
			width auto
			display inline-block
		.document-item-container
			&.document-item-container-hidden
				padding 0
			padding 15px 0
			height 0px
			max-height 400px
			width 100%
			overflow-x hidden
			background-color #333
			color #fff
			position relative
			.document-item-content
				color #F5F5F5
			.document-item-container-text-muted
				font-size 11px
				color #444
				text-align center
				position absolute
				left 0
				right 0
				bottom 10px
				font-weight bold
				text-transform uppercase
		.document-menu-title, .document-menu-toggle
			margin-bottom 0
		.document-menu-toggle
			width 30px
			height @width
			padding 0px
			line-height 30px
			font-size 24
			margin-right 15px
		.document-item:first-child
			border-top none
		.document-item
			padding 10px 10px 10px 20px
			border-top 1px solid #2B2B2B//#F1F1F1
			.document-item-title
				font-weight bold
			.document-item-content
				color $color-text-muted
				font-size 12px
				margin 0px
			&:hover
				background-color #F1F1F1
				cursor pointer
	.document-editor
		text-align center
		.document-editor-title
			margin 0 auto
			width 100%
			border-bottom 1px dashed rgba(169,169,169,0.4)
			padding-bottom 5px
			&:hover, &:focus
				border-bottom 1px dashed rgba(169,169,169,1)
		.document-editor-bar
			color $color-text-muted
			margin 10px 5px
			font-size 13px
			.document-editor-tools
				display none
		.document-editor-content
			text-align left
			width 100%
			min-height 200px
			&, &:hover, &:focus
				border 0
				border-radius 0
				outline none
			.document-editor-content-placeholder
				padding-left 5px
				border-left 1px solid transparent
				transition all 0.1s ease
		.document-editor-tools
			height 20px





